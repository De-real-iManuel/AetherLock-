# =============================================================================
# AetherLock Frontend Environment Variables
# =============================================================================
# Copy this file to .env for local development
# For production deployment, configure these in Vercel dashboard
# See DEPLOYMENT.md for detailed configuration instructions
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL (HTTP/HTTPS)
# Development: http://localhost:3001
# Production: https://api.aetherlock.app
VITE_API_URL=http://localhost:3001

# WebSocket server URL (WS/WSS)
# Development: ws://localhost:3001
# Production: wss://api.aetherlock.app
VITE_WS_URL=ws://localhost:3001

# -----------------------------------------------------------------------------
# Blockchain Configuration
# -----------------------------------------------------------------------------
# Solana RPC endpoint
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com

# ZetaChain RPC endpoint
# Testnet: https://zetachain-athens-evm.blockpi.network/v1/rpc/public
# Mainnet: https://zetachain-mainnet.blockpi.network/v1/rpc/public
VITE_ZETACHAIN_RPC_URL=https://zetachain-athens-evm.blockpi.network/v1/rpc/public

# -----------------------------------------------------------------------------
# Smart Contract Addresses
# -----------------------------------------------------------------------------
# Solana program ID for AetherLock escrow contracts
# Replace with your deployed program ID
VITE_SOLANA_PROGRAM_ID=AetherLockEscrow11111111111111111111111111

# ZetaChain gateway contract address
# Replace with your deployed gateway address
VITE_ZETACHAIN_GATEWAY=0x9fE46736679d2D9a65F0992F2272dE9f3c7fa6e0

# -----------------------------------------------------------------------------
# Third-Party Services
# -----------------------------------------------------------------------------
# zkMe KYC application ID
# Get your app ID from https://zk.me
VITE_ZKME_APP_ID=M202510180319727898435789743751

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable voice chat features (future feature)
VITE_ENABLE_VOICE=false

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=true